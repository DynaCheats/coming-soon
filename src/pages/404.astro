---
import '@/styles/globals.css'
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <div class="relative flex flex-col h-screen items-center justify-center">
    <div class="flex items-center" style="font-family:system-ui, &quot;Segoe UI&quot;, Roboto, Helvetica, Arial, sans-serif, &quot;Apple Color Emoji&quot;, &quot;Segoe UI Emoji&quot;">
      <div>
        <style>
          body { color: #000; background: #fff; margin: 0; }
          .next-error-h1 { border-right: 1px solid rgba(0,0,0,.3); }
          @media (prefers-color-scheme: dark) {
          body { color: #fff; background: #000; }
          .next-error-h1 { border-right: 1px solid rgba(255,255,255,.3); }
          }
        </style>
        <h1 style="display:inline-block;margin:0 20px 0 0;padding:0 23px 0 0;font-size:24px;font-weight:500;vertical-align:top;line-height:49px" class="next-error-h1">404</h1>
        <div class="inline-block">
          <h2 style="font-size:14px;font-weight:400;line-height:49px;margin:0">This page could not be found.</h2>
        </div>
      </div>
    </div>
    <footer class="absolute bottom-6 text-center">
      <a class="text-muted-foreground font-extrabold" href="/">
        Powered by<!-- --> <span class="bg-gradient-to-r from-dynacheats to-[#00d6ff] bg-clip-text text-transparent">DynaCheats</span>
      </a>
    </footer>
  </div>
</Layout>